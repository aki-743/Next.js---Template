{
  "plugin": [
    "stylelint-scss",
    "stylelint-prettier",
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-rational-order",
    "stylelint-prettier/recommended"
  ],
  "ignoreFiles": [
    "**/node_modules/**"
  ],
  "rules": {
    "prettier/prettier": true,
    "order/properties-alphabetical-order": true,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind"
        ]
      }
    ]
  }
}